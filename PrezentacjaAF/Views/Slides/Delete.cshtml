@model PrezentacjaAF.Models.SlideViewModels.DeleteViewModel

@{
    ViewData["Title"] = Localizer["Delete slide"];
}

<h2>@Localizer["Delete slide"]</h2>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="ID" />
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="@Localizer["Delete slide"]" class="btn btn-default" /> |
            <a asp-action="Index">@Localizer["Back to List"]</a>
        </div>
    </form>
</div>
